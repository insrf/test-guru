<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body >
    <h1><%= link_to 'TestGuru', root_path %></h1>
    <% if logged_in? %>
      <p class="nav user">Welcome, <b><%=current_user.email %></b> Guru |
      <%= link_to 'logout', logout_path %></p>
    <% end %>

    <%= yield %>
    <div class="footer"><%= render "shared/footer" %></div>
  </body>
</html>
