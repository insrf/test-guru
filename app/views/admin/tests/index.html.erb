<h1><%= t('.header') %></h1>

<p>
  <%=link_to t('.new_test'), new_admin_test_path %>
</p>

<% if @tests.present? %>
<table>
  <tr>
    <th><%= t('.title') %></th>
    <th><%= t('.level') %></th>
    <th><%= t('.count') %></th>
    <th colspan="3"><%= t('.action') %></th>
  </tr>

  <%= render @tests%>

</table>
<% else %>
  <p>t('.zero')</p>
<% end %>
