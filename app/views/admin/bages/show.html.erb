<h1>Badges</h1>

<%= render 'shared/errors', resource: @bage %>

<% if @bage.present? %>
<table class="table-sm table-striped table-bordered">
  <thead class="thead-inverse">
    <tr>
    <th>Name</th>
    <th>Icon</th>
    <th>Rule</th>
    <th>Rule value</th>
    <th colspan="3">Action</th>
    </tr>
  </thead>

  <%= render @bage %>

</table>
<% else %>
  <p>No badges</p>
<% end %>

<%= link_to "Back", admin_bages_path %>
